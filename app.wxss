page{
  height: 100%;
  background-color: #f5f5f5;
}
.nomore{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  text-align: center;
  font-size: 28rpx
}
.navigator-hover{
  background-color: transparent;
}
.backTop{
  position: fixed;
  bottom: 200rpx;
  right: -150rpx;
  transition: right 0.5s;
  border:10rpx solid #0068B6;
  background-color: rgba(255,255,255,.6);
  border-radius: 20rpx;
/*  height: 60rpx;
  width: 60rpx;*/
  padding: 10rpx 13rpx;
}
.backTop.active{
  right: 50rpx;
}
.backTop .iconfont{
  font-size: 60rpx;
  color: #0068B6;
  font-weight: bolder;
}

.delete,.submit{
  color:#fff;
  padding: 20rpx;
  justify-content: center;
  text-align:center;
  align-items: center;
  border-radius: 12rpx;
}
.submit{
  background-color: #498AF4;
}
.submit.disabled,.submit.disabled:active{
  background-color: rgba(73,138,244,.5);
  color: #fff
}
.submit:active{
  background-color: #0068B6;
  color: #eee
}
.delete{
  background-color: #DD4F43;
}
.delete:active{
  background-color: #860509;
  color: #eee
}


/*列表*/
.list{
  padding:0 30rpx;
  color:#333;
}

.list-item{
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  border-bottom: 1rpx solid #eee
}
.list-item .bd{
  flex:1;
}
.list-item .iconfont{
  transform: translateY(-10rpx);
}
.list-item .lf,.list-item .rt{

}
.list-item .lf{
  margin-right: 20rpx;
}
.list-item .rt{

}


/*表单*/
.form-list{
  color: #333;
  padding: 0 20rpx;
  background-color: #fff;
}
.form-list .iconfont{
  font-size: 25rpx;
  transform: translateY(-10rpx);
}
.form-title{
  font-size: 35rpx;
  font-weight: bolder;
  padding: 30rpx 20rpx 20rpx;
  color:#333;
}

.form-item{
  padding: 30rpx 0;
  background-color: #fff;
  display: flex;
  font-size: 32rpx;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.form-item:last-child{
  border: none;
}
/*.form-item:last-child{
  border-bottom: none
}*/
.form-item picker{
  flex:1;
}
.form-item .lf{
  width: 230rpx;
}
.form-item .bd{
  flex:1;
  display: flex;
}
.form-item .bd input{
  width: 100%;
}
.form-item .bd.ct{
  justify-content: center;
}
.form-item .bd.rt{
  display: flex;
  justify-content: flex-end;
}
.form-item .rt{
  
}
.form-item.container{
  display: flex;
  flex-direction: column;
}
.form-item.container .title{
  font-size: 34rpx;
  justify-content: space-between;
  display: flex;
  width: 100%;
}
.form-item.container .iconfont{
  font-size: 40rpx;
}
.form-item.container .body{
  font-size: 32rpx;
  justify-content: space-between;
  word-break: break-all;
  display: flex;
  width: 100%;
}
.form-item.container .description{
  font-size: 28rpx;
  justify-content: space-between;
  word-break: break-all;
  display: flex;
  width: 100%;
}
/*详情*/
.detail-cell{
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 40rpx 20rpx;
}
.detail-cell .title{
  margin-top: 10rpx;
  font-size: 35rpx;
  display: flex;
  color: #0A77C8;
  font-weight:bolder;
  align-items: center;
}
.detail-cell .title:before{
  width: 15rpx;
  height: 50rpx;
  display: block;
  content: "";
  background-color: #0A77C8;
  margin-right: 10rpx; 

}
.detail-cell .body{
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  font-size: 29rpx;
  text-indent: 50rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}









