/*推荐或最新*/
.recommendTabBar{
  width: 100%;
  color: #666;
  background-color: #f5f5f5;
}
.recommendTabBar-item{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  display: flex;
  position: relative;
  /* align-content: center; */
}
.recommendTabBar-item:after{
  position: absolute;
  bottom: 0;
  width: 90%;
  height: 2rpx;
  content:'';
  background-color: #ddd;
  left: 0;
  right: 0;
  margin: 0 auto;

}
.recommendTabBar-item:last-child:after{
  display: none;
}
.recommendTabBar-item-body{
  flex: 1;
  text-align: center;
}
.recommendTabBar-item-place{
  flex: 3;
}
.recommendTabBar-item-body .iconfont{
  margin-left: 10rpx;
  margin-right: -10rpx;
  visibility: hidden;
}

/*激活*/
.recommendTabBar-item.active .iconfont{
  visibility:visible;
}
.recommendTabBar-item.active{
  color: #0068b6;
}








