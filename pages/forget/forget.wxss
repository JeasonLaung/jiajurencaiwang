.forget{
	padding: 40rpx;
	display: flex;
	flex-direction: column;
}
input{
	/*width: 100%;*/
	flex:1;
	background-color: #fff;
	height: 100rpx;
	padding-left: 20rpx;

	margin-bottom: 30rpx; 
}
.logo-body{
	display: flex;
	align-content: center;
	justify-content:center;
}
.logo{
	max-width: 400rpx;
	height: 200rpx;
}
.tel,.code{
	display: flex;
	align-items: flex-start;
	overflow: hidden;
	/*background-color: #fff;*/

}
.tel input{
		border-radius: 0 12rpx 12rpx 0;
}
.code input{
	border-radius: 12rpx 0  0 12rpx ;
}
.phone{

	height:100rpx;
	padding:0 20rpx;
	border-radius: 12rpx 0 0 12rpx;
	background-color: #fff;
	font-weight: bold;
	display: flex;
	align-items: center;
}
.icon-phone{
		font-size: 40rpx;
}
.code .submit{
	padding: 0 10rpx;
	border-radius: 0 20rpx 20rpx 0;
	width:200rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
}
.forget > .submit{
	margin: 0;
	margin-top:50rpx;
}