/* pages/changeInfo/person/person.wxss */

.face{
	border: 4rpx solid #eee;
	height: 120rpx;
	width: 120rpx;
	border-radius: 50%;
	background-color: #f5f5f5;

}
.tags{
	padding:0 30rpx 30rpx;
	display: flex;
	background-color: #fff;
	flex-wrap: wrap;
}
.tags .tag{
	font-size:25rpx; 
	padding:20rpx 40rpx;
	border: 2rpx solid #ddd;
	margin-right: 40rpx;
	margin-top: 30rpx;
	border-radius: 40rpx;
	color: #666;
}
.tags .tag.active{
	color: #fff;
	background-color: #0068B6;
	border-color: #0068B6;
}

.container .title{
	font-size: 32rpx;
	padding:20rpx 0;
	font-weight: bolder;
	color: #333;
	position: relative;
}
.container .title:after{
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	width: 50%;
	height: 2rpx;
	background-color: #f5f5f5;
	content: ""
}
.container{
	padding-bottom: 20rpx;
	transition: transform .2s
}
.container:active{
	/*background-color: #f5f5f5;*/
	transform: scale(1.02);
}

.container .body{

	font-size: 30rpx;
	color: #666;
	margin: 20rpx 0 0;
	padding:20rpx 0;
}
.container .description{
	word-break: break-all;
	color: #999;
	font-size: 27rpx;
	line-height: 1.2;
	color: #777;
	margin-top: 20rpx;
	margin-bottom: 30rpx;
}