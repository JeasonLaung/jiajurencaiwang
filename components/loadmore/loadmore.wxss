/* components/loadmore/loadmore.wxss */

.loading{
  height: 100rpx;
  width: 100%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 30rpx;
}
.loading-image{
  margin-right: 20rpx;
  height: 50rpx;
  width: 50rpx;
  animation: loadingmove .8s ease-in-out alternate infinite;
  transform: rotate(20deg);
  transform-origin: bottom center;
}
@keyframes loadingmove{
  from {
    transform: rotate(20deg);
  }
  to{
    transform: rotate(-20deg);
  }
}