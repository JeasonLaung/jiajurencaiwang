@import '../../app.wxss'
.prompt{
	position: fixed;
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
	z-index: 7777;
}
.icon-reset{
	transform: translateY(-10rpx);
	color: #ccc;
}
.prompt .container{
	border:2rpx solid #ddd;
	z-index: 8888;
	position: absolute;
	left: 0;
	right: 0;
	bottom:150rpx;
	top: 0;
	max-height: 250rpx;
	margin:auto auto;
	width: 500rpx;
	background-color: #fff;
	padding:40rpx;
	box-shadow: 0 4rpx 5rpx 3rpx rgba(55,55,55,.15);
}
.prompt .title{
	margin-bottom: 37rpx;
	color:#222;
	font-weight: bold;
}
.prompt .message{
	word-break: break-all;
	white-space: break-word;
	font-size: 32rpx;
	text-overflow: ellipsis;
	height: 120rpx;
	overflow: scroll;
}
