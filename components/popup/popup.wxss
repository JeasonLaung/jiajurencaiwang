/* components/popup/popup.wxss */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 999;
  opacity: 0.7;
}
.dialog{
  /* 默认高宽 */
/*  width: 80%;
  height: 10%;*/


  position: fixed;
/*  top: 0;
  left: 0;*/
  background: #fff;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  
  

}

@keyframes moveTop{
  from{
    transform: translateY(-100%);
  }
  to{
    transform: translateY(0%);
  }
}
@keyframes moveBottom{
  from{
    transform: translateY(100%);
  }
  to{
    transform: translateY(0%);
  }
}
@keyframes moveLeft{
  from{
    transform: translateX(-100%);
  }
  to{
    transform: translateX(0%);
  }
}
@keyframes moveRight{
  from{
    transform: translateX(100%);
  }
  to{
    transform: translateX(0%);
  }
}






.top{
  animation: moveTop .3s ease-out forwards;
  top: 0;
  left: 0;
  right: 0;
  margin:0 auto;
}
.bottom{
  animation: moveBottom .3s ease-out forwards;
  bottom: 0;
  left: 0;
  right: 0;
  margin:0 auto;
}
.left{
  animation: moveLeft .3s ease-out forwards;
  bottom: 0;
  top: 0;
  left: 0;
  margin:auto 0;
}
.right{
 animation: moveRight .3s ease-out forwards;
  bottom: 0;
  top: 0;
  right: 0;
  margin:auto 0;
}